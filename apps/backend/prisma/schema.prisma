generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Usuario {
    id        String   @id @db.Uuid
    nome      String
    email     String   @unique
    senha     String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model SuperTag {
    id            String         @id @db.Uuid
    titulo        String
    emoji         String
    propriedades  Propriedades[]
    updatedAt     DateTime       @updatedAt
    superTagPaiId String?
    superTagPai   SuperTag?      @relation("SuperTagHierarchy", fields: [superTagPaiId], references: [id])
    superTagFilha SuperTag[]     @relation("SuperTagHierarchy")
}

model Propriedades {
    id         String   @id @db.Uuid
    superTagId String
    superTag   SuperTag @relation(fields: [superTagId], references: [id])
    valor      String
    descricao  String
}
